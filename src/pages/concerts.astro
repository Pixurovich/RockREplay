---
import Layout from '../layouts/Layout.astro';
import ConcertCard from '../components/ConcertCard.astro';

const upcomingConcerts = [
  
];
---

<Layout 
  title="Концерты - RockReplay" 
  description="Расписание предстоящих рок-концертов"
  background="https://images.unsplash.com/photo-1459749411175-04bf5292ceea?auto=format&fit=crop&q=80&w=2070"
>
  <section class="container mx-auto px-4">
    <h1 class="text-4xl font-bold mb-8 text-center">Афиша концертов</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {upcomingConcerts.map(concert => <ConcertCard {...concert} />)}
    </div>
  </section>
</Layout>
