// Get upcoming concerts
const upcomingConcerts = [

  {
    band: "Atomic Cellos. Мировые рок-хиты на виолончелях",
    date: "20 декабря — 31 декабря",
    venue: "StandUp Cafe",
    city: "Москва",
    ticketLink: "https://t.me/RockReplay/433",
    imageUrl: "https://www.fiesta.ru/uploads/slider_image/image/202602/v880_LTAgszjVSY4.jpg",
    price: "от 1200 ₽",
    telegramPostId: "433"
  }
];

// Combine all posts for the scrolling section
const allPosts = [
  ...latestVideos.map(video => ({
    ...video,
    category: 'Клип'
  })),
  ...latestNews,
  ...upcomingConcerts.map(concert => ({
    title: concert.band,
    description: `${concert.venue}, ${concert.city}`,
    imageUrl: concert.imageUrl,
    telegramPostId: concert.telegramPostId,
    category: 'Концерт',
    date: concert.date
  }))
];
---

<Layout title="RockReplay - лучшее из мира рок-музыки">
